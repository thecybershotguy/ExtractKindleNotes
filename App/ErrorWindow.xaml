<Window x:Class="ExtractKindleNotes.ErrorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ExtractKindleNotes"
        mc:Ignorable="d"
        Title="Error Window" Height="450" Width="900">
    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="0.2*"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Label Content="Error occurred during loading application"
               Foreground="White" Background="Red" FontSize="25" FontWeight="SemiBold"
               HorizontalContentAlignment="Center" Padding="10"/>

        <TextBlock Margin="10" VerticalAlignment="Top" Grid.Row="1" Text="{Binding ErrorMessage}" FontSize="20" FontWeight="SemiBold"
               TextWrapping="Wrap" Padding="10"/>

    </Grid>
</Window>
